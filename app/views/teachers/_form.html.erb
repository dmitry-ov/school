<%= simple_form_for(@teacher) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :surname %>
    <%= f.input :phone %>
    <%= f.input :note %>
    <%= f.collection_check_boxes(:subject_ids, Subject.all, :id, :subject){|b|
                                          b.label {b.check_box + "  " + b.text}}  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
