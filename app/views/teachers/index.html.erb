<ul class="nav nav-tabs">
  <li> <%= link_to 'Список учеников', learners_path %> </li>
  <li><%= link_to 'Список предметов', subjects_path %></li>
  <li class="active"><%= link_to 'Список учителей', teachers_path %></li>
</ul>


<table class="table">
  <tr>
    <th>Имя</th>
    <th>Фамилия</th>
    <th>Телефон</th>
    <th>Примечания</th>
    <th>Ученики</th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.name %></td>
    <td><%= teacher.surname %></td>
    <td><%= teacher.phone %></td>
    <td><%= teacher.note %></td>
    <td>
      <% teacher.subjects.each do |s|%>
        <div class="btn btn-mini"> <%= s.subject %> </div> 
      <% end %>
    </td>
    
    <td><%= link_to 'Редактировать', edit_teacher_path(teacher), :class => "btn btn-info btn-small" %></td>
    <td><%= link_to 'Удалить', teacher, method: :delete, data: { confirm: 'Вы уверены ?' },:class => "btn btn-danger btn-small" %></td>
  </tr>
<% end %>
</table>

