<%= form_for(@learner) do |f| %>
  <% if @learner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@learner.errors.count, "error") %> prohibited this learner from being saved:</h2>

      <ul>
      <% @learner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Фамилия %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label :Имя %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :Школа %><br />
    <%= f.text_field :school %>
  </div>
  <div class="field">
    <%= f.label :Класс %><br />
    <%= f.text_field :school_class %>
  </div>
  <div class="field">
    <%= f.label :Телефон %><br />
    <%= f.text_field :phone %>
  </div>
  
  <div class="field">
    <%= f.label :Примечания %><br />
    <%= f.text_area :note %>
  </div>

  <div class="list subjects">  
    <% Subject.all.each do |s| %>
      <div class="field">
        <%= f.label(s.subject)  %>
        <%= @learner.subject_ids.include?(s.id) ? check_box_tag("#{s.subject}", "#{s.subject}", true) : check_box_tag("#{s.subject}", "#{s.subject}") %> 
      </div>
    <% end -%>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить" %>
  </div>


<% end %>
